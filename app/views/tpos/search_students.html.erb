<% provide(:title, "Search Results") %>
<div class="student_search_container">
	<div class="heading_container">
		<h1 class="lead">Search Results for - <%= params[:search] %></h1>
	</div>
	<div class="search_results">
		<% if @students.any? %>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Course</th>
						<th>Branch</th>
						<th>Email</th>
						<th>Phone No.</th>
					</tr>
				</thead>
				<tbody>
					<% @students.each do |student| %>
						<tr>
							<td><%= link_to student.first_name+" "+student.last_name, student %></td>
							<td><%= Course.find(student.course_id).name %></td>
							<td><%= Branch.find(student.branch_id).name %></td>
							<td><%= student.email %></td>
							<td><%= student.phone_no %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% else %>
			<p class="lead text-center">No Results Found</p>
		<% end %>
	</div>
</div>