<div class="col-lg-2 col-md-2 col-sm-2 user_content_wrapper tpo_sidebar">
	<div class="user_pic_container">
			<%= image_tag @tpo.image_url.nil? ? 'default_user.jpg' :@tpo.image_url.to_s, {:class => "user_pic"} %>
	</div>
		<%= link_to @tpo, :class=>"tpo_name" do %>
			<%= @tpo.first_name %> <%= @tpo.last_name %>
		<% end %>
		<% if @tpo.email == current_user.email %>
			<%= link_to new_jobpost_path, :class => "btn btn-block btn-info" do %>
				<span class="fa fa-plus"> </span> Post a Job
			<% end %>
		<% end %>
</div>