<% provide(:title, "College SignUp") %>
<div class="intro_wrapper window_span">
    <div class="intro_wrapper_overlay window_span"></div>
    <div class="container">
            <div class="signup_form_container college_signup form_container curr_active">
                <div class="signup_form form_content animated flipInX">
                	<p>SignUp as College/TPO</p>
                    <form>
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input type="email" class="form-control" placeholder="Eg.: username@example.com" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Full Name</label>
                            <input type="name" class="form-control" placeholder="Your Name" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">College</label>
                            <select class="form-control">
                            	<option>IEC College of Engineering and Technology</option>
                            	<option>IEC College of Engineering and Technology</option>
                            	<option>IEC College of Engineering and Technology</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Password</label>
                            <input type="password" class="form-control" placeholder="Your Profile Password"/>
                        </div>
                        <div class="redirect_links">
                        	<%= link_to "SignUp as Student", new_student_path %> | 
                            <%= link_to "Already Signed Up?", new_session_path %>
                        </div>
                        <a class="btn btn-lg btn-default sign_up_btn" type="submit"><span class="hover_span"></span><b>SignUp</b></a>
                    </form>
               </div>
            </div>
   </div>
</div>

