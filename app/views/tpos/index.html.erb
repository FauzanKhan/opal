<% provide(:title, 'All Tpos') %>
<h1 class="text-center">All Tpos <small>[<%= pluralize(@tpos.count, " Tpo") %>]</small></h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email ID</th>
      <th>College</th>
      <td>Actions</td>
    </tr>
  </thead>
  <% @tpos.each do |tpo| %>
    <tr>
      <td><%= link_to tpo.first_name+" "+tpo.last_name, tpo_path(tpo) %></td>
      <td><%= tpo.email %></td>
      <td><%= tpo.college %></td>
      <% if current_user.admin? %>
    	 <td><%= link_to "delete", tpo, method: :delete, data: { confirm: "You sure?" } %></td>
  	  <% end %>
    </tr>
  <% end %>
</table>