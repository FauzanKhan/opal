<% if @student.errors.any? %>
	<div id="error_explaination">
		<div class="alert alert-danger">
			The form containes <%= pluralize(@student.errors.count, "error") %> :
		</div>
		<ul class="error_list">
			<% @student.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

