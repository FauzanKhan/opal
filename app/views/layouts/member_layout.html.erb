<!DOCTYPE html>
<html>
<head>
	<title><%= yield(:title) %> | Simplifica</title>
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag 'logged_in', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', 'rel' => "stylesheet" %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				<h1 class="navbar-brand"><a href="#">Sf</a></h1>
				<ul class="nav navbar-nav collapse navbar-responsive-collapse visible">
					<li class="pull-left"><a href="#"><span class="fa fa-home"></span> Home</a></li>
					<li class="divider"></li>
					<li class="pull-left"><a href="#"><img src="" height:"20" width="20" /> <%= @tpo.name %></a>
					<li class="search_form">
						<form role="search">
							<input type="text" placeholder="Search opportunities by Position, Location or Company" class="form-control">
							<button class="btn btn-default btn-md"><span class="fa fa-search"><span></button>
						</form>
					</li>
					<li class="pull-right dropdown_container"><a href="#"><span class="fa fa-cog"></span> Account <span class="caret"></a>
						<ul class="dropdown_list list-unstyled">
							<li><a href="#"><span class="fa fa-cogs"></span> Account Settings</a></li>
							<li class="divider"></li>
							<li><a href="#"><span class="fa fa-edit"></span> Edit Profile</a></li>
							<li class="divider"></li>
							<li><a href="#"><span class="fa fa-power-off"></span> Log Out</a></li>
						</ul>
					</li>
					<li class="divider pull-right"></li>
					<li class="pull-right dropdown_container"><a href="#"><span class="fa fa-language"></span> Opportunities <span class="caret"></a>
						<ul class="dropdown_list list-unstyled">
							<li><a href="#"><span class="fa fa-institution"></span> On-Campus</a></li>
							<li class="divider"></li>
							<li><a href="#"><span class="fa fa-building-o"></span> Off-Campus</a></li>
							<li class="divider"></li>
							<li><a href="#"><span class="fa fa-building"></span> Walk-ins</a></li>
						</ul>
					</li>
				</ul>
			</div>
		</nav>
	</div>
	
	<div class="container content_wrapper">
		<div class="row content_row">
			<div class="col-lg-10 col-md-10 col-sm-12 dynamic_content_wrapper">
				<%= yield %>
			</div>
			<div class="col-lg-2 col-md-2 col-sm-12 adv_wrapper">
				<div class="advertisement">
					<p>Advertisement</p>
				</div>
				<div class="advertisement">
					<p>Advertisement</p>
				</div>
				<div class="advertisement">
					<p>Advertisement</p>
				</div>
			</div>
		</div>
	</div>

    <%= debug(params) if Rails.env.development? %>
	<script type="text/javascript" src="assets/js/bootstrap.js"></script>

</body>
</html>
