<% provide(:title, "Post a Job | "+current_user.first_name.to_s+" "+current_user.last_name.to_s) %>
<div class="row">
	<%= render '/tpos/tpo_sidebar' %>
	<div class="col-lg-10 col-md-10 col-sm-10 main_content">
		<div class="jobpost_form_container">
			<h3>Post an opportunity</h3>
			<%= form_for(@jobpost) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
				<div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <%= f.label :company, :class => "control-label" %>
                            <%= f.text_field :company, :class => "form-control", :placeholder => "Company Name" %>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <%= f.label :position, :class => "control-label" %>
                            <%= f.text_field :position, :class => "form-control", :placeholder => "Position Offered" %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-2 col-xs-12">
                        <div class="form-group">
                            <%= f.label :req_percentage, :class => "control-label" do %>
                            	Required percentage
                            <% end %>
                            <%= f.text_field :req_percentage, :class => "form-control", :placeholder => "Minimum Percentage Required" %>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-10 col-xs-12">
                    	<div class="form-group">
		            		<label class="control-label">Eligible Courses</label>
		                    <div class="checkbox">
							    <label class="checkbox-inline">
							      <input type="checkbox"> B.Tech
							    </label>
							    <label class="checkbox-inline">
							      <input type="checkbox"> M.Tech
							    </label>
							    <label class="checkbox-inline">
							      <input type="checkbox"> B.Pharma
							    </label>
							    <label class="checkbox-inline">
							      <input type="checkbox"> M.Pharma
							    </label>
							    <label class="checkbox-inline">
							      <input type="checkbox"> M.C.A
							    </label>
							</div>
						</div>
                    </div>
                </div>
                <div class="form-group">
            		<label class="control-label">Eligible branches</label>
                    <div class="checkbox">
					    <label class="checkbox-inline">
					      <input type="checkbox"> CSE
					    </label>
					    <label class="checkbox-inline">
					      <input type="checkbox"> IT
					    </label>
					    <label class="checkbox-inline">
					      <input type="checkbox"> ECE
					    </label>
					    <label class="checkbox-inline">
					      <input type="checkbox"> EEE
					    </label>
					    <label class="checkbox-inline">
					      <input type="checkbox"> EI
					    </label>
					    <label class="checkbox-inline">
					      <input type="checkbox"> ME
					    </label>
					    <label class="checkbox-inline">
					      <input type="checkbox"> Civil
					    </label>
					 </div>
				</div>
                <div class="form-group">
                    <%= f.label :other_requirements, :class => "control-label" %>
                    <%= f.text_area :other_requirements, :class => "form-control", :placeholder => "Any Other Requirements" %>
                </div>
                <div class="form-group">
                    <%= f.label :job_profile, :class => "control-label" %>
                    <%= f.text_area :job_profile, :class => "form-control", :placeholder => "Job Description" %>
                </div>
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        <div class="form-group">
                            <%= f.label :venue, :class => "control-label" %>
                            <%= f.text_field :venue, :class => "form-control", :placeholder => "Adderess for the drive" %>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group">
                            <%= f.label :location, :class => "control-label" %>
                            <select class="form-control">
                            	<option>Delhi</option>
                            	<option>Noida</option>
                            	<option>Bangallore</option>
                            	<option>Mumbai</option>
                            <select>
                        </div>
                    </div>
                </div>
                <%= f.submit "Post", :class=>"btn btn-lg btn-info pull-right" %>
			<% end %>
		</div> 
	</div>
</div>